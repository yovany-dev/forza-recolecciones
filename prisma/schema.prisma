generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  avatar    String
  password  String
  role      String
  createdAt DateTime @default(now())
  drivers Drivers[]
}

model Drivers {
  uuid           String   @id @default(uuid())
  employeeNumber Int      @unique
  fullname       String
  dpi            Int
  schedule       String
  position       String
  createdAt      DateTime @default(now())
  user Users @relation(fields: [userId], references: [id])
  userId Int
}
